
.carousel
	background: #FFFFFF
	height 400px 
	position relative
	width 100%
	&:hover
		.carousel-left			
		.carousel-right
			margin -20px 0 0 0
			opacity 1
	.carousel-left
	.carousel-right
		opacity 0
		background rgba( 0, 0, 0, 0.7 );
		top 50%
		display block
		height 40px
		margin -20px 0 0 0
		position: absolute
		width 40px
		z-index: 10
		transition: all 100ms ease-out 0s
		//
		
				
		.arrow
			transition all 0.3s ease
			display block
			width 20px
			height 20px
			transform: rotate(45deg);
			border: 6px solid color1
			position: absolute
			top 10px
			
	.carousel-right
		right 0			
		margin-right 40px 
		&:hover
			.arrow
				border-right: 6px solid #FFF
				border-top: 6px solid #FFF
		.arrow
			border-left: none;
			border-bottom: none;
			left 7px
		
	.carousel-left
		left 0	
		margin-left 40px
		//background: linear-gradient(left,  rgba(0, 0, 0, .75) 0%,transparent 100%)
		&:hover
			.arrow
				border-left: 6px solid #FFF
				border-bottom: 6px solid #FFF
		.arrow
			border-right: none;
			border-top: none;		
			right 7px
	.item
		height 400px
		left 0
		opacity 0
		overflow hidden
		position absolute
		top 0
		width 100%
				
			
		&:nth-child(2n-1)
			.caption
				width 60%
				background: rgba(255, 255, 255, 0.5);
				color #363636
				.title
					text-shadow: 0 1px 2px rgba(255, 255, 255, 0.6);
				.content
					color #363636
					text-shadow: 0 1px 2px rgba(255, 255, 255, 0.6);
		&:nth-child(2n)
			.caption
				width 30%
				right none
				left 0
			.auth			
				width 100%
				max-width 600px
		&:nth-child(1)
			opacity 1
			
			
			.caption
				border-top: none
				margin 0 20%
				width 60%
				background: none
				text-align: center
				.title
				.content
					color #FFF
					text-shadow: 0 1px 2px rgba(0, 0, 0, 0.6);
					
				.title
					font-size: 40px
			
				
					
					
		img
			position absolute
			top 50%
			left 50%
			transform translate(-50%, -50%)	
			//height 400px
			width 100%
			z-index: 4
		.caption
			background-color: rgba(0, 0, 0, 0.5);
			border-top: 3px solid #EA5644;
			bottom 0
			box-sizing: border-box
			color #FFFFFF
			padding 20px 30px
			position: absolute
			right 0
			width 50%
			z-index: 5
			.title
				border-bottom: 1px solid rgba(255, 255, 255, 0.2);
				text-shadow: 0 1px 2px rgba(0, 0, 0, 0.6);
				font-weight: 700
				margin 0 0 15px 0
				padding 0 0 15px 0
				font-size: 22px
			.more
				color #FFF
				text-shadow: 0 1px 2px rgba(0, 0, 0, 0.6);
				background color1
				transition all 0.3s ease
				font-weight 700
				font-size 14px
				&:hover
					background: #9D3426
			.content
				font-size 14px
				color #FFF
				text-shadow: 0 1px 2px rgba(0, 0, 0, 0.6);
				font-weight: 700
				


@media screen and (max-width: 990px)
	.carousel
		.item
			img
				width auto
				height 400px
				
@media screen and (max-width: 770px)	
	.carousel
		height 350px
		.item
			height 350px
			.caption
				&:nth-child(2n-1)
				&:nth-child(2n)
					width 100%
					margin 0
					.content
						display none
		.carousel-left			
		.carousel-right
			margin -20px 0 0 0
			opacity 1
			
			