.container
	.gallery-single-container
		overflow hidden
		padding 30px
		box-sizing border-box	
		background #FFFFFF
		width 100%
		
		.title
			color #636363
		    
			font-weight: 700
			font-size: x
			padding 0 0 15px 0
			margin 0 0 30px 0
			border-bottom 1px solid rgba(0, 0, 0, .05)
			vertical-align: middle

			.label-info
				vertical-align: middle
				display inline-block
				background: #68B5E6
				padding 4px 12px
				color #FFFFFF
				font-weight 700
				font-size l
				text-align: center
		.photos-container
			margin-left: -15px
			margin-right: -15px			
			.photo
				padding 20px 15px 10px 15px
				width 32.9%
				display inline-block
				vertical-align top
				//float left
				overflow hidden
				box-sizing border-box
				a
					margin 0 0 10px 0
					overflow hidden
					display block
					height 125px
					background: #777
					position relative
					img
						height 100%
						transform translate(-50%, -50%)
						position absolute								
						top 50%
						left 50%
						transition all 0.3s ease
						&:hover
							transform translate(-50%, -50%) scale(1.2)


			figcaption
				font-style: italic
				font-size: s
				font-weight: 400
				color #777

	.last-form
		overflow hidden 
		padding 30px
		margin 40px 0 0 0
		background: rgba(215, 255, 202, 0.5);
		p.form-title
			font-weight: 700

	
@media screen and (max-width: 770px)	
	.container
		.gallery-single-container
			.photos-container
				.photo
					width 100%
					display block
					a
						height 150px
						